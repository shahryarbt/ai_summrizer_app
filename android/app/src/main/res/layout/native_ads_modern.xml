<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modern_ad_view"
    android:layout_width="match_parent"
    android:layout_height="234dp"
    android:background="@drawable/ad_card_bg"
    android:orientation="vertical"
    android:padding="8dp">

    <com.google.android.gms.ads.nativead.MediaView
        android:id="@+id/native_ad_media"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="6dp">

        <ImageView
            android:id="@+id/native_ad_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/native_ad_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/ad_advertiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/ad_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ad"
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:background="@drawable/ad_badge_bg" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/native_ad_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#444444"
        android:paddingTop="4dp"
        android:maxLines="2"
        android:ellipsize="end" />

    <Button
        android:id="@+id/native_ad_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:text="Open"
        android:textColor="#FFFFFF"
        android:background="@drawable/open_btn_bg"
        android:textStyle="bold" />

</com.google.android.gms.ads.nativead.NativeAdView>
